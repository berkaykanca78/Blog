@model IEnumerable<BKBlogMVCApp.Models.Category>

<div class="card border-dark mb-3" style="margin-top:30px;">
    <div class="card-header"><h4>Blog Kategorileri</h4></div>
    <div class="card-body text-dark">
        <div class="card-text">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <li>
                                <a href="/Blog/List/@item.CategoryId">@item.KategoriAdi</a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

