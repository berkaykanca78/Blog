@model IEnumerable<BKBlogMVCApp.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Kategori Listesi</h2>
<hr />
<p>
    @Html.ActionLink("Kategori Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />
@if (TempData["Kategori"] != null)
{
    var kategori = (BKBlogMVCApp.Models.Category)TempData["Kategori"];
    <div class="alert alert-success">
        <strong><i class="fa fa-check-circle"></i><span>&nbsp;@kategori.KategoriAdi</span></strong> Kayıt Edildi.
    </div>
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover table-striped table-responsive-md">
                <tr class="table-primary" >
                    <th style="width:10%;text-align:center;">
                        <b>@Html.DisplayNameFor(model => model.KategoriAdi)</b>
                    </th>
                    <th style="width:10%;text-align:center;">
                        <b>@Html.DisplayNameFor(model => model.BlogSayisi)</b>
                    </th>
                    <th style="width:10%;text-align:center;"><b>İşlemler</b></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center;">
                            @item.KategoriAdi
                        </td>
                        <td style="text-align:center;">
                            @if (item.BlogSayisi > 0)
                            {
                                <div align="center">
                                    <button type="button" class="btn btn-success btn-sm">
                                        Blog Var <span class="badge badge-light">@item.BlogSayisi</span>
                                    </button>
                                </div>
                            }
                            else
                            {
                                <div align="center">
                                    <button type="button" class="btn btn-danger btn-sm">
                                        Blog Yok <span class="badge badge-light">@item.BlogSayisi</span>
                                    </button>
                                </div>
                            }

                        </td>
                        <td style="text-align:center;">
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm mx-1" })
                            @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm mx-1" })
                            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm mx-1" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Kayıt Bulunamadı</h3>
    </div>
    <div style="margin-top:275px;"></div>
}
else
{

}

