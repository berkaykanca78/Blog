@model IEnumerable<BKBlogMVCApp.Models.BlogModel>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Kayıt Bulunamadı</h3>
    </div>
    <div style="margin-top:275px;"></div>
}
else
{
    foreach (var blog in Model)
    {
        string resim = "~/img/" + @blog.Resim;
        <div class="blog" style="margin-top:5px;">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card border-dark mb-4">
                            <img class="card-img-top img-responsive" src="@Url.Content(resim)" alt="" style="width:100%;height:100%;">
                            <div class="card-body text-dark">
                                <h3 class="card-tittle">@blog.Baslik</h3>
                                <div class="card-text">
                                    <p>&nbsp;@blog.Aciklama</p>
                                    <p>@Html.ActionLink("Daha Fazla...", "Details", "Blog", new { id = blog.Id }, new { @class = "btn btn-primary" })</p>
                                </div>
                            </div>
                            <div class="card-footer text-muted">
                                <i class="fa fa-calendar"></i>
                                <span>&nbsp;@blog.EklenmeTarihi</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

}

