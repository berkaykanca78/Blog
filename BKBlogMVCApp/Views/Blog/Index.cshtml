@model IEnumerable<BKBlogMVCApp.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>
<hr />
<p>
    @Html.ActionLink("Blog Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />

@if (TempData["Blog"] != null)
{
    var blog = (BKBlogMVCApp.Models.Blog)TempData["Blog"];
    <div class="alert alert-success" role="alert">
        <strong><i class="fa fa-check-circle"></i><span>&nbsp;@blog.Baslik</span></strong>
        Güncellendi.
    </div>
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover table-striped table-responsive-md">
                <tr class="table-primary">
                    <th style="width:13%;text-align:center;">
                        <b>@Html.DisplayNameFor(model => model.Category.KategoriAdi)</b>
                    </th>
                    <th style="text-align:center;">
                        <b>@Html.DisplayNameFor(model => model.Baslik)</b>
                    </th>
                    <th style="text-align:center;">
                        <b>@Html.DisplayNameFor(model => model.Resim)</b>
                    </th>
                    <th style="width:15%;text-align:center;">
                        <b>@Html.DisplayNameFor(model => model.EklenmeTarihi)</b>
                    </th>
                    <th style="text-align:center;">
                        <b>@Html.DisplayNameFor(model => model.Onay)</b>
                    </th>
                    <th style="width:13%;text-align:center;">
                        <b>@Html.DisplayNameFor(model => model.Anasayfa)</b>
                    </th>
                    <th style="width:13%;text-align:center;"><b>İşlemler</b></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center;">
                            @Html.DisplayFor(modelItem => item.Category.KategoriAdi)
                        </td>
                        <td style="text-align:center;">
                            @Html.DisplayFor(modelItem => item.Baslik)
                        </td>
                        <td style="text-align:center;">
                            <img src="~/img/@item.Resim" width="100"/>
                        </td>
                        <td style="text-align:center;">
                            @Html.DisplayFor(modelItem => item.EklenmeTarihi)
                        </td>
                        <td style="text-align:center;">
                            @if (item.Onay)
                            {
                                <span class="badge badge-success">Onaylı</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Onay Bekliyor</span>
                            }
                        </td>
                        <td style="text-align:center;">
                            @if (item.Anasayfa)
                            {
                                <span class="badge badge-success">Anasayfada</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Anasayfada Değil</span>
                            }
                        </td>
                        <td style="text-align:center;">
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Kayıt Bulunamadı</h3>
    </div>
    <div style="margin-top:275px;"></div>
}
else
{

}